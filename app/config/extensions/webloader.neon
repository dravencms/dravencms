extensions:
  webloader: WebLoader\Nette\Extension

parameters:
  webloaderDir: %appDir%/../www

services:
  wlCssFilter: WebLoader\Filter\CssUrlsFilter(%wwwDir%)
  sassFilter: WebLoader\Filter\ScssFilter
  cssMin: Joseki\Webloader\CssMinFilter
  jsMin: Joseki\Webloader\JsMinFilter

webloader:
  cssDefaults:
    sourceDir: %webloaderDir%
    tempDir: %webloaderDir%/webtemp
  jsDefaults:
    sourceDir: %webloaderDir%
    tempDir: %webloaderDir%/webtemp
  css:
    admin:
      files:
        - modules/admin/bower_components/bootstrap/dist/css/bootstrap.min.css
        - modules/admin/bower_components/font-awesome/css/font-awesome.min.css

        #Pixel admin
        - modules/admin/css/pixel-admin.min.css
        - modules/admin/css/pages.min.css
        - modules/admin/css/typeahead.css
        - modules/admin/css/rtl.min.css
        - modules/admin/css/themes.min.css

        - modules/admin/bower_components/dropzone/dist/min/dropzone.min.css
        #- modules/admin/bower_components/grido/client-side/css/grido.css
        - modules/admin/grido-new/grido.css
        - modules/admin/bower_components/blueimp-gallery/css/blueimp-gallery.min.css
        - modules/admin/bower_components/blueimp-bootstrap-image-gallery/css/bootstrap-image-gallery.min.css
        - modules/admin/bower_components/summernote/dist/summernote.css
        - modules/admin/bower_components/select2/dist/css/select2.css
        - modules/admin/bower_components/morris.js/morris.css
        - modules/admin/bower_components/morris.js/morris.css

        # Custom select 2 style
        - modules/admin/css/select2-bootstrap.css

        - modules/admin/bower_components/pace/themes/blue/pace-theme-minimal.css
        - modules/admin/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css
        - modules/admin/bower_components/flag-icon-css/css/flag-icon.css
        - modules/admin/bower_components/codemirror/lib/codemirror.css

        - modules/admin/css/style.scss

      filters:
        - @cssMin
      fileFilters:
        - @wlCssFilter
        - @sassFilter

  js:
    admin:
      remoteFiles:
        - https://www.google.com/recaptcha/api.js
      files:
        - modules/admin/js/tools.js

        # Moment.js
        - modules/admin/bower_components/moment/min/moment.min.js

        # Jquery
        - modules/admin/bower_components/jquery/dist/jquery.min.js
        - modules/admin/bower_components/jquery-maskedinput/dist/jquery.maskedinput.min.js # ???

        # Bootstrap
        - modules/admin/bower_components/bootstrap/dist/js/bootstrap.min.js
        - modules/admin/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js
        - modules/admin/bower_components/bootstrap-daterangepicker/daterangepicker.js
        - modules/admin/bower_components/typeahead.js/dist/typeahead.bundle.min.js

        # Nette
        - modules/admin/bower_components/nette-forms/src/assets/netteForms.js
        - modules/admin/bower_components/nette.ajax.js/nette.ajax.js

        # Grido
        - modules/admin/grido-new/grido.js
        #- modules/admin/bower_components/grido/client-side/js/grido.js
        #- modules/admin/bower_components/grido/client-side/js/plugins/grido.nette.ajax.js
        #- modules/admin/bower_components/grido/client-side/js/plugins/grido.typeahead.js
        #- modules/admin/bower_components/grido/client-side/js/plugins/grido.datepicker.js

        # Blueimp gallery
        - modules/admin/bower_components/blueimp-gallery/js/jquery.blueimp-gallery.min.js
        - modules/admin/bower_components/blueimp-bootstrap-image-gallery/js/bootstrap-image-gallery.min.js

        # Summernote
        - modules/admin/bower_components/summernote/dist/summernote.min.js

        # Plugin for summernote to work with dravenCms files
        - modules/admin/js/files-plugin.js

        # DravenCMS layout ediotor
        - modules/admin/js/layout-editor.js

        # nette-file selector
        - modules/admin/js/file-selector.js

        # Pace
        - modules/admin/bower_components/pace/pace.min.js

        # Select 2
        - modules/admin/bower_components/select2/dist/js/select2.min.js

        # Dropzone
        - modules/admin/bower_components/dropzone/dist/min/dropzone.min.js

        # This is needed cos some conflicts in pixel-admin
        # !FIXME withnout this we get "Dropzone already attached! JS error"
        - modules/admin/js/dropzone-fix.js

        # Morris.js
        - modules/admin/bower_components/raphael/raphael.min.js
        - modules/admin/bower_components/morris.js/morris.min.js

        # Codemirror
        - modules/admin/bower_components/codemirror/lib/codemirror.js
        - modules/admin/bower_components/codemirror/mode/xml/xml.js
        - modules/admin/bower_components/codemirror/mode/javascript/javascript.js
        - modules/admin/bower_components/codemirror/mode/css/css.js
        - modules/admin/bower_components/codemirror/mode/htmlmixed/htmlmixed.js

        # Main JS
        - modules/admin/bower_components/jquery-slimscroll/jquery.slimscroll.min.js
        - modules/admin/js/menu.js
        - modules/admin/js/main.js

      fileFilters:
        - @jsMin

includes:
    - webloader-artificial-reason.neon